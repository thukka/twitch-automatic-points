{
    "name": "Twitch Automatic Channel Points",
    "description": "Automatically claim channel point chests.",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "https://*.twitch.tv/*"
            ],
            "run_at": "document_end",
            "js": ["background.js"] 
        }
    ],
    "permissions": [
        "activeTab", "scripting"
    ]
}